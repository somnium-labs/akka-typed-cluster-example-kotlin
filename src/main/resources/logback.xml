<configuration>
    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <!--            <pattern>%date{ISO8601} %highlight(%-5level) %cyan(%logger{36}) [%X{sourceThread}] - %highlight(%msg%n)-->
            <pattern>%date{ISO8601} %highlight(%-5level) %cyan(%logger{36}) - %highlight(%msg%n)
            </pattern>
        </encoder>
    </appender>

    <root level="INFO">
        <appender-ref ref="STDOUT"/>
    </root>
</configuration>
